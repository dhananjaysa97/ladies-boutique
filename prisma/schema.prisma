generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Float
  imageUrl    String
  gallery     String[] @default([])
  category    String
  sizes       String[]
  color       String?
  isHot       Boolean  @default(false)
  isLatest    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Visit {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  path      String
  sessionId String?
  userAgent String?
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // hashed password
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
